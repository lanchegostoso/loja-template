// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
model Users {
  id                   String   @id @default(uuid())
  email                String   @unique
  telefone             String?
  image                String?
  telefone_emergencia  String?
  rg                   String?
  cpf                  String?  @unique
  data_de_nascimento   String?
  name                 String
  password             String
  type                 String
  termos_de_uso        String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt()
}
model UsersAnaminese {
  id                       String   @id @default(uuid())
  userId                   String   @unique
  possui_doenca            String?
  qual_doenca              String?
  faz_uso_medicamento      String?
  qual_medicamento         String?
  alergia_medicamento      String?
  alergia_qual_medicamento String?
  restricao_alimentar      String?
  quais_alimentos          String?
  tamanho_blusa            String?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt()
}

model PaymentUser{
  id                  String   @id @default(uuid())
  userId              String
  paymentId           String
  paymentStatus       String
  paymentDescription  String
  paymentType         String
  active              Boolean
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt()
}